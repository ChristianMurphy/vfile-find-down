{
  "name": "vfile-find-down",
  "version": "1.0.0",
  "description": "Find one or more files by searching the file system downwards",
  "license": "MIT",
  "keywords": [
    "vfile",
    "walk",
    "find",
    "down",
    "downward",
    "downwards",
    "above",
    "retext",
    "remark"
  ],
  "repository": "wooorm/vfile-find-down",
  "dependencies": {
    "to-vfile": "^1.0.0"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "eslint": "^1.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.0.0",
    "remark": "^3.0.0",
    "remark-comment-config": "^2.0.0",
    "remark-github": "^2.0.0",
    "remark-lint": "^2.0.0",
    "remark-slug": "^3.0.0",
    "remark-validate-links": "^2.0.0",
    "tape": "^4.2.0"
  },
  "scripts": {
    "build-md": "remark . --quiet  --frail",
    "build": "npm run build-md",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "test-api": "node test/index.js",
    "test-coverage": "istanbul cover test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
